<EditForm Model="@Model">
    <DataAnnotationsValidator />
    <MudDialog>
        <DialogContent>
            <MudTextField @bind-Value="Model.Duration" ReadOnly="true" Label="Тривалість" Variant="Variant.Text" />
            <br/>
            <MudTextField @bind-Value="Model.ZoomMeetingId" ReadOnly="true" Label="Zoom Room ID" Variant="Variant.Text"></MudTextField>
            <br />
            <MudTextField @bind-Value="Model.DateCreated" ReadOnly="true" Label="Дата створення" Variant="Variant.Text"></MudTextField>
            <br />
        </DialogContent>
        <DialogActions>
            <br />
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="CopyToClipboard">Копіювати посилання</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>
