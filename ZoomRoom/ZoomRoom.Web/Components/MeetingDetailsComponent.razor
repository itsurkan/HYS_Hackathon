<EditForm Model="@Model">
    <DataAnnotationsValidator />
    <MudDialog>
        <DialogContent>
            <MudTextField ReadOnly="true" @bind-Value="Model.ZoomLink" Label="Посилання" Variant="Variant.Text" />
            <br/>
            <MudTextField ReadOnly="true" @bind-Value="Model.RoomId" Label="Room ID" Variant="Variant.Text"></MudTextField>
            <br />
            <MudTextField ReadOnly="true" @bind-Value="Model.DateCreated" Label="Дата створення" Variant="Variant.Text"></MudTextField>
            <br />
        </DialogContent>
        <DialogActions>
            <br />
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="CopyToClipboard">Копіювати посилання</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>
